<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    width="400"
    height="600"
    title="Ventana de prueba 2"
    onclose="exit"
    icon="cinco.png">
    <GridBag row-display="0 0 0 1 1 0" column-display="0 1 0" cols="0 1 0" rows="0 0 0 0 0 0" style="padding: 5">
        <Label row="0" col="0" style="font-style:bold" insets="5" anchor="top-left">Host</Label>
        <TextField row="0" col="1" fill="both" id="host">localhost/test</TextField>
        <Label row="1" col="0" style="font-style:bold" insets="5" anchor="top-left">User</Label>
        <TextField row="1" col="1" fill="both" id="user">root</TextField>
        <Label row="2" col="0" style="font-style:bold" insets="5" anchor="top-left">Password</Label>
        <TextField row="2" col="1" fill="both" id="password"/>
        <Label row="3" col="0" style="font-style: bold" insets="5" anchor="top-left"
        >SQLQuery</Label>
        <ScrollPane row="3" col="1" fill="both">
            <TextArea id="queryArea" style="font-family: Consolas"/>
        </ScrollPane>
        <Button row="3" col="2" id="runBtn" anchor="top-left">Run</Button>
        <ScrollPane row="4" col="1" fill="both">
            <Table id="table">
                <th>
                    <td>Column 1</td>
                    <td>Column 2</td>
                    <td>Column 3</td>
                </th>
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                </tr>
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                </tr>
            </Table>
        </ScrollPane>
        <ComboBox row="5" col="1">
            <Option>A</Option>
            <Option>B</Option>
            <Option>C</Option>
            <Option>D</Option>
        </ComboBox>
    </GridBag>

</Frame>