<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    width="400"
    height="600"
    title="Ventana de prueba"
    onclose="exit"
    container="grid"
    icon="cinco.png">
    <Border row-display="0 1" column-display="1" columns="1" rows="0 1">
        <Label pos="top" layout="top" fill="horizontal" row="0" col="0"
               style="background: black; color: green; padding: 10; font-size: 22"
        >Panel</Label>
        <!--Label row="1" col="0" fill="both">Algo</Label-->
        <ScrollPane h-policy="never" style="border: 2 double red; background: blue">
            <Grid>
                <TextArea style="padding: 10; color: white; background: black; caret: red; selection: #c2e3bc">Hola</TextArea>
                <TextField>Prueba</TextField>
            </Grid>
        </ScrollPane>
        <Label pos="bottom" h-align="center" style="font-size: 32">Copyright (c) 2023</Label>
    </Border>
</Frame>