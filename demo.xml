<?xml version="1.0" encoding="UTF-8" ?>
<Frame
        width="600"
        height="500"
        title="App"
        onclose="exit"
>
    <Content>

            <GridBag tabName="Compañías" column-weights="0 1" columns="0 1"
                     border="2 solid red"
            >
                <Label row="0" column="0" font-style="bold" border="10 solid red" >Nombre</Label>
                <TextField row="0" column="1" fill="horizontal" id="nombre" cols="10"/>
                <Label row="1" column="0" font-style="bold">Año</Label>
                <TextField row="1" column="1" fill="horizontal" id="anio"/>
                <Label row="2" column="0" font-style="bold">Slogan</Label>
                <TextField row="2" column="1" fill="horizontal" id="slogan"/>
                <Label row="3" column="0" font-style="bold">Url</Label>
                <TextField row="3" column="1" fill="horizontal" id="url" />
                <Label row="4" column="0" font-style="bold">Ubicación</Label>
                <Flow row="5" column="3" fill="horizontal" border="2 solid red">
                    <Button id="guardar">Guardar</Button>
                    <Button id="cancelar">Cancelar</Button>
                </Flow>
                <TextField row="4" column="1" fill="horizontal" id="ubicacion" />

            </GridBag>



    </Content>
</Frame>